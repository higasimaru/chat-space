.chat-side
  .side-header
    .side-header__box
      %h3.side-header__box__user-name
        = current_user.name      
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group    
          = link_to new_group_path(current_user) do
            = icon('fas', 'edit', class: "new-group")
        %li.side-header__box__menu__edit-user
          = link_to edit_user_path(current_user)  do
            = icon('fas', 'cog', class: "edit-user") 
  .groups
    - current_user.groups.each do |group|
      .groups__group
        = link_to group_messages_path(group), class: "group" do
          %p.group__group-name
            = group.name
          %p.group__latest-messages 
            = group.show_last_message 
                     


        
